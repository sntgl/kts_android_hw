<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <ImageView
        android:id="@+id/subreddit_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="W,1:1"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@id/user_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/hand"/>
    <TextView
        android:id="@+id/subreddit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="r/Name"
        android:padding="5dp"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/subreddit_img"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="u/User"
        android:padding="5dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/subreddit_img"
        app:layout_constraintTop_toBottomOf="@id/subreddit_name"/>
    <TextView
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="16sp"
        android:text="@string/feed_interpoint"
        app:layout_constraintTop_toTopOf="@id/user_name"
        app:layout_constraintBottom_toBottomOf="@id/user_name"
        app:layout_constraintLeft_toRightOf="@id/user_name"/>
    <TextView
        android:id="@+id/date_published"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/separator"
        app:layout_constraintTop_toTopOf="@id/user_name"
        android:padding="5dp"
        tools:text="12h"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        tools:text="Spanish mackerel blacktip reef shark Australian herring deep sea bonefish trumpetfish graveldiver."/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feed_more"
        android:textStyle="bold"
        android:padding="5dp"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/up_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="W,1:1"
        android:src="@drawable/ic_baseline_arrow_upward_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="@id/vote_counter"
        />
    <TextView
        android:id="@+id/vote_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="100"
        android:padding="5dp"
        android:textSize="18sp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:layout_constraintLeft_toRightOf="@id/up_button"
        app:layout_constraintTop_toBottomOf="@id/title"
        />
    <ImageView
        android:id="@+id/down_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="W,1:1"
        android:src="@drawable/ic_baseline_arrow_downward_24"
        app:layout_constraintLeft_toRightOf="@id/vote_counter"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="@id/vote_counter"
        />
    <ImageView
        android:id="@+id/comment_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/vote_counter"
        app:layout_constraintLeft_toRightOf="@id/down_button"
        app:layout_constraintRight_toLeftOf="@id/share_button"
        app:layout_constraintDimensionRatio="W,1:1"
        android:src="@drawable/ic_baseline_chat_bubble_outline_24"
        />
    <ImageView
        android:id="@+id/share_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/vote_counter"
        android:src="@drawable/ic_baseline_share_24"/>

</androidx.constraintlayout.widget.ConstraintLayout>
